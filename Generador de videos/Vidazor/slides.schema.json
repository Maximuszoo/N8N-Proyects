{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Slides Schema",
  "description": "Schema para validar la estructura de slides para generación de video",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["inicio", "fin", "titulo", "puntos"],
    "properties": {
      "inicio": {
        "type": "string",
        "pattern": "^\\d{1,2}:\\d{2}(:\\d{2})?$",
        "description": "Tiempo de inicio en formato HH:MM o HH:MM:SS"
      },
      "fin": {
        "type": "string",
        "pattern": "^\\d{1,2}:\\d{2}(:\\d{2})?$",
        "description": "Tiempo de fin en formato HH:MM o HH:MM:SS"
      },
      "titulo": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200,
        "description": "Título de la diapositiva"
      },
      "puntos": {
        "type": "array",
        "minItems": 0,
        "maxItems": 10,
        "items": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Punto o bullet de la diapositiva"
        },
        "description": "Lista de puntos o bullets para mostrar en la diapositiva"
      },
      "notas": {
        "type": "string",
        "maxLength": 1000,
        "description": "Notas opcionales para el presentador"
      }
    },
    "additionalProperties": false
  }
}
